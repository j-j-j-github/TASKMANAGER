@{
    ViewData["Title"] = "Dashboard";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<style>
    /* 1. TOPBAR: Force Black Background */
    nav.navbar, .navbar {
        background-color: #000000 !important; /* Pure Black */
        border-bottom: 1px solid #333 !important; /* Dark Grey Border */
    }

    /* 2. TOPBAR TEXT: Force White */
    .navbar-brand, .nav-link, .navbar-text, .btn-link {
        color: #ffffff !important;
    }
    
    /* 3. PAGE BACKGROUND */
    body {
        background-color: #f8f9fa;
    }

    /* 4. CARD HOVER EFFECT */
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px -5px rgba(0, 0, 0, 0.1) !important;
    }
</style>

<div class="card border-0 shadow rounded-4 mb-4 overflow-hidden bg-white">
    <div class="card-body p-4 d-flex flex-wrap justify-content-between align-items-center">
        <div class="d-flex align-items-center mb-3 mb-lg-0">
            <div class="d-flex align-items-center justify-content-center bg-primary bg-opacity-10 text-primary rounded-circle me-3 flex-shrink-0" 
                 style="width: 64px; height: 64px;">
                <i class="bi bi-buildings-fill fs-3"></i>
            </div>
            <div>
                <div class="d-flex align-items-center gap-2">
                    <h2 class="h4 mb-0 fw-bold text-dark">@ViewBag.TeamName</h2>
                    @if (ViewBag.UserRole == "Admin") {
                        <button class="btn btn-sm btn-link text-muted p-0 border-0" data-bs-toggle="modal" data-bs-target="#editProjectModal">
                            <i class="bi bi-pencil-square"></i>
                        </button>
                    }
                </div>
                <div class="text-muted small">
                    Managed by <span class="fw-semibold text-primary">@ViewBag.AdminName</span>
                </div>
            </div>
        </div>

        <div class="d-flex align-items-center gap-3">
            <div class="bg-light border rounded-pill px-4 py-2 d-flex align-items-center shadow-sm">
                <span class="text-uppercase text-muted small me-2" style="font-size: 0.7rem; letter-spacing: 1px;">CODE</span>
                <span class="fw-bold text-dark font-monospace me-3" id="inviteCodeText">@ViewBag.InviteCode</span>
                <button class="btn btn-sm btn-light rounded-circle text-primary" onclick="copyCode()"><i class="bi bi-clipboard"></i></button>
            </div>
            
            @if (ViewBag.UserRole == "Admin") {
                <div class="vr mx-2 text-muted opacity-25"></div>
                <button class="btn btn-outline-danger btn-sm px-3 fw-bold rounded-pill" data-bs-toggle="modal" data-bs-target="#deleteProjectModal">
                    <i class="bi bi-gear-fill me-1"></i> Settings
                </button>
            }
        </div>
    </div>
</div>

@if (ViewBag.UserRole == "Admin")
{
    <div id="adminAlertSection" class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden" style="display:none; background: #fff5f5;">
        <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
                <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center me-3 shadow-sm" style="width: 40px; height: 40px;">
                    <i class="bi bi-bell-fill"></i>
                </div>
                <div>
                    <h6 class="fw-bold text-danger mb-0">Critical Attention Needed</h6>
                    <small class="text-muted">The following tasks have crossed the deadline.</small>
                </div>
            </div>
            
            <div id="overdueList" class="d-flex flex-wrap gap-3"></div>
        </div>
    </div>
}

<div class="d-flex align-items-center mb-4 gap-2">
    
    <div class="input-group input-group-lg shadow-sm rounded-pill overflow-hidden border-0 flex-grow-1">
        <span class="input-group-text bg-white border-0 ps-4 text-muted"><i class="bi bi-search"></i></span>
        <input type="text" id="searchInput" class="form-control border-0 ps-2" placeholder="Search by task or by assigned name...">
    </div>

    <div class="dropdown">
        <button class="btn btn-white btn-lg shadow-sm rounded-pill border-0 text-muted px-3" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="min-width: 50px;">
            <i class="bi bi-funnel-fill"></i>
        </button>
        <ul class="dropdown-menu shadow-lg border-0 rounded-4 p-2 mt-2" style="min-width: 200px;">
            <li><h6 class="dropdown-header text-uppercase small fw-bold text-muted op-50">Sort By Date</h6></li>
            <li><a class="dropdown-item rounded-3 mb-1 small fw-bold" href="#" onclick="changeSort('date-new')"><i class="bi bi-sort-down me-2 text-primary"></i>Newest First</a></li>
            <li><a class="dropdown-item rounded-3 mb-2 small fw-bold" href="#" onclick="changeSort('date-old')"><i class="bi bi-sort-up me-2 text-primary"></i>Oldest First</a></li>
            
            <li><hr class="dropdown-divider opacity-10"></li>
            
            <li><h6 class="dropdown-header text-uppercase small fw-bold text-muted op-50">Sort By Priority</h6></li>
            <li><a class="dropdown-item rounded-3 mb-1 small fw-bold" href="#" onclick="changeSort('prio-high')"><i class="bi bi-graph-up-arrow me-2 text-danger"></i>Highest First</a></li>
            <li><a class="dropdown-item rounded-3 small fw-bold" href="#" onclick="changeSort('prio-low')"><i class="bi bi-graph-down-arrow me-2 text-success"></i>Lowest First</a></li>
        </ul>
    </div>

    <button class="btn btn-primary btn-lg rounded-pill px-4 shadow fw-bold flex-shrink-0" onclick="openModal()">
        <i class="bi bi-plus-lg me-2"></i>New Task
    </button>
</div>

<div class="card border-0 shadow rounded-4 mb-5 overflow-hidden hover-card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-uppercase text-muted small fw-bold" style="letter-spacing: 0.5px;">Task Info</th>
                        <th class="py-3 text-uppercase text-muted small fw-bold">Assigned To</th> 
                        <th class="py-3 text-uppercase text-muted small fw-bold">Priority</th>
                        <th class="py-3 text-uppercase text-muted small fw-bold">Due Date</th>
                        <th class="py-3 text-uppercase text-muted small fw-bold">Status</th>
                        <th class="text-end pe-4 py-3 text-uppercase text-muted small fw-bold">Actions</th>
                    </tr>
                </thead>
                <tbody id="taskTableBody" class="bg-white">
                    </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row mb-5">
    <div class="col-lg-6 offset-lg-3">
        <div class="card border-0 shadow rounded-4 hover-card">
            <div class="card-header bg-white border-0 pt-4 pb-0 text-center">
                <h5 class="fw-bold text-dark mb-0">Team Workload Distribution</h5>
                <small class="text-muted">Active tasks assigned per user</small>
            </div>
            <div class="card-body pb-4">
                <div style="height: 300px; position: relative;">
                    <canvas id="taskChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.availableUsers = @Json.Serialize(
        ((IEnumerable<TaskManagerApp.Models.User>)ViewBag.UsersList)
        .Select(u => new { id = u.Id, name = u.FullName, email = u.Email })
    ) || []; 

    function copyCode() {
        var codeText = document.getElementById("inviteCodeText").innerText;
        navigator.clipboard.writeText(codeText);

        var toastEl = document.getElementById('copyToast');
        var toast = new bootstrap.Toast(toastEl, { delay: 3000 });
        toast.show();
    }
</script>

<script src="~/js/taskManager.js"></script>

<div class="modal fade" id="taskModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">Task Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <input type="hidden" id="taskId" value="0">
                <div class="mb-3">
                    <label class="form-label text-muted small fw-bold">Title</label>
                    <input type="text" id="taskTitle" class="form-control form-control-lg rounded-3">
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted small fw-bold">Description</label>
                    <textarea id="taskDesc" class="form-control rounded-3" rows="3"></textarea>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted small fw-bold">Assign To</label>
                        <select id="taskAssignedTo" style="width: 100%"></select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted small fw-bold">Priority</label>
                        <select id="taskPriority" class="form-select rounded-3">
                            <option value="High">High</option>
                            <option value="Medium">Medium</option>
                            <option value="Low">Low</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted small fw-bold">Deadline</label>
                        <input type="date" id="taskDeadline" class="form-control rounded-3">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted small fw-bold">Status</label>
                        <select id="taskStatus" class="form-select rounded-3">
                            <option value="Pending">Pending</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Completed">Completed</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0 pe-4 pb-4">
                <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm" onclick="saveTask()">Save Task</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editProjectModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">Rename Team</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form asp-action="UpdateProjectName" method="post">
                    <div class="mb-3">
                        <label class="form-label text-muted small">New Team Name</label>
                        <input type="text" name="newName" class="form-control form-control-lg fw-bold rounded-3" value="@ViewBag.TeamName" required>
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteProjectModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4 bg-white">
            <div class="modal-body p-5 text-center">
                <div class="text-danger mb-3"><i class="bi bi-exclamation-triangle-fill display-1"></i></div>
                <h3 class="fw-bold text-danger mb-3">Delete Project?</h3>
                <p class="text-muted mb-4">This will permanently delete your team, all users, and all tasks. This action cannot be undone.</p>
                
                <form asp-action="DeleteProject" method="post" class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger btn-lg rounded-pill fw-bold shadow-sm">YES, DELETE EVERYTHING</button>
                    <button type="button" class="btn btn-light rounded-pill fw-bold" data-bs-dismiss="modal">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteTaskModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
            <input type="hidden" id="deleteTaskIdHidden" value="0">
            <div class="modal-header bg-danger text-white border-0 py-2 justify-content-center">
                <h6 class="modal-title fw-bold"><i class="bi bi-trash3-fill me-2"></i>Delete Task</h6>
            </div>
            <div class="modal-body text-center p-4">
                <p class="mb-0 text-muted small">Are you sure? This cannot be undone.</p>
            </div>
            <div class="modal-footer border-0 bg-light p-2 justify-content-center gap-2">
                <button type="button" class="btn btn-sm btn-outline-secondary px-3 rounded-pill" data-bs-dismiss="modal">No</button>
                <button type="button" class="btn btn-sm btn-danger px-4 fw-bold shadow-sm rounded-pill" onclick="confirmDeleteTask()">Yes</button>
            </div>
        </div>
    </div>
</div>

<div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1055;">
    <div id="copyToast" class="toast align-items-center text-white bg-dark border-0 shadow-lg rounded-pill" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body px-4 py-3 fw-bold">
                <i class="bi bi-clipboard-check-fill text-success fs-5 me-2"></i> 
                Code Copied to Clipboard!
            </div>
            <button type="button" class="btn-close btn-close-white me-3 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>