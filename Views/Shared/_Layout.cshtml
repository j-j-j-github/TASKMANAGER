<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task Manager</title>
    
    <link rel="icon" type="image/png" href="~/tmticon.png?v=2" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <style>
        /* Simplified CSS to avoid Razor Parser Errors */
        .dropdown-menu {
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
            border-radius: 12px;
            overflow: hidden;
        }
        .dropdown-header {
            background-color: #f8f9fa;
            font-weight: 700;
            color: #495057;
            border-bottom: 1px solid #e9ecef;
        }
        .dropdown-item:hover {
            background-color: #f1f3f5;
        }
    </style>
</head>
<body class="bg-light d-flex flex-column min-vh-100">
    
    @if (ViewData["HideNavbar"] == null)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-3 shadow-sm">
                <div class="container-fluid">
                    
                    <a class="navbar-brand d-flex align-items-center" href="/">
                        <img src="~/tmt.png" alt="Logo" class="rounded-circle me-2 border border-secondary" style="width: 32px; height: 32px; object-fit: cover;">
                        <span class="fw-bold me-1">TMT</span> <span class="fw-light text-white-50">Task Manager Team</span>
                    </a>
                    
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    
                    <div class="navbar-collapse collapse">
                        <ul class="navbar-nav flex-grow-1">
                        </ul>
                        
                        <ul class="navbar-nav ms-auto align-items-center">
                            
                            <li class="nav-item dropdown me-3">
                                <a class="nav-link position-relative" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-bell" style="font-size: 1.3rem; color: rgba(255,255,255,0.8);"></i>
                                    
                                    <span id="notificationBadge" class="position-absolute badge rounded-pill bg-danger shadow-sm border border-light" 
                                          style="display:none; top: 5px; right: -2px; font-size: 0.65rem; padding: 0.25em 0.5em;">
                                        0
                                    </span>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end shadow-lg" aria-labelledby="notificationDropdown" id="notificationList" style="width: 320px; max-height: 400px; overflow-y: auto;">
                                    <li><h6 class="dropdown-header">📢 Notifications</h6></li>
                                    <li class="text-center p-4 text-muted small">
                                        <i class="fa-regular fa-circle-check fa-2x mb-2 text-secondary"></i><br>
                                        All caught up!
                                    </li>
                                </ul>
                            </li>

                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item me-3">
                                    <span class="navbar-text text-white">
                                        Hello, @User.Identity.Name
                                    </span>
                                </li>
                                <li class="nav-item">
                                    <a href="/Account/Logout" class="btn btn-outline-danger btn-sm">Logout</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto py-3 bg-white">
        <div class="container d-flex flex-column flex-md-row justify-content-center align-items-center gap-3">
            <span class="fw-bold small">&copy; 2025 By J3 Labs</span>
            
            <span class="d-none d-md-inline text-muted opacity-25">|</span>
            
            <a href="https://www.thej3labs.com" target="_blank" class="btn btn-sm btn-outline-secondary rounded-pill px-3 fw-bold border-secondary text-secondary">
                <i class="bi bi-life-preserver me-1"></i> Support
            </a>
        </div>
    </footer>

</body>
</html>